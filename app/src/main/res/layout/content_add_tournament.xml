<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_add_tournament"
    tools:context="com.example.adityasathe.cricket_on_23.AddTournament">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fl11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tournament_name"
            android:hint="Tournament Name"
            android:layout_alignParentTop="true"
            android:paddingLeft="20dp"
            android:layout_marginTop="30dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fl12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl11">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/venue"
            android:hint="Venue"
            android:paddingLeft="20dp"
            android:layout_marginTop="30dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fl13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl12">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/matches_in_tournament"
            android:hint="Matches"
            android:paddingLeft="20dp"
            android:layout_marginTop="30dp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fl14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl13">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/start_Date"
            android:hint="Start Date"
            android:paddingLeft="20dp"
            android:layout_marginTop="30dp"
            android:focusable="false"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fl15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl14">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/end_date"
            android:hint="End Date"
            android:paddingLeft="20dp"
            android:layout_marginTop="30dp"
            android:focusable="false"/>

    </android.support.design.widget.TextInputLayout>

</RelativeLayout>
