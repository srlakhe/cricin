<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_match_details"
    tools:context="com.shreyaslakhe.cricin.match_details">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/mat1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/venue"
            android:hint="Venue"
            android:paddingLeft="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_below="@id/won"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/mat2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mat1">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stadium"
            android:hint="Stadium"
            android:paddingLeft="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_below="@id/venue"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/mat3"
        android:layout_below="@id/mat2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:hint="Match Date"
            android:focusable="false"
            android:id="@+id/match_date"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:layout_alignParentStart="true" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Match"
        android:id="@+id/check_over02"
        android:layout_below="@+id/mat3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />


</RelativeLayout>
