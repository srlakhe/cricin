<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Data"
        android:id="@+id/addDataBtn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Tournament"
        android:id="@+id/addTournamentBtn"
        android:layout_above="@+id/addTeamBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Team"
        android:id="@+id/addTeamBtn"
        android:layout_above="@+id/addDataBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Team To Tournament"
        android:id="@+id/addTeamtournamentBtn"
        android:layout_below="@+id/addDataBtn"
        android:layout_alignStart="@+id/addTournamentBtn"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Match"
        android:id="@+id/StartMbtn"
        android:layout_below="@+id/addTeamtournamentBtn"
        android:layout_alignStart="@+id/addTournamentBtn"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Over"
        android:id="@+id/check_over"
        android:layout_below="@+id/StartMbtn"
        android:layout_alignStart="@+id/addTournamentBtn"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:id="@+id/stat"
        android:layout_below="@+id/StartMbtn"
        android:layout_alignStart="@+id/check_over"
        android:layout_marginTop="10dp" />

</RelativeLayout>
