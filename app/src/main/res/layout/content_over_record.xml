<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_over_record"
    tools:context="com.example.adityasathe.cricket_on_23.OverRecord">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:layout_marginBottom="10dp"
        android:text="brief scorecard"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx1"
        android:text="Batsman"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@id/header"/>
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx2"
        android:layout_toRightOf="@+id/tx1"
        android:textAlignment="center"
        android:layout_below="@id/header"
        android:text="R"
        android:textStyle="bold" />
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx3"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/tx2"
        android:layout_below="@id/header"
        android:text="B"
        android:textStyle="bold" />
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx4"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/tx3"
        android:layout_below="@id/header"
        android:text="4s"
        android:textStyle="bold" />
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx5"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/tx4"
        android:text="6s"
        android:layout_below="@id/header"
        android:textStyle="bold" />

    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx6"
        android:layout_toRightOf="@+id/tx5"
        android:textAlignment="center"
        android:text="SR"
        android:layout_below="@id/header"
        android:textStyle="bold" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/bname"
        android:textAlignment="center"
        android:layout_below="@+id/tx1"/>
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/bruns"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/bname"
        android:layout_below="@+id/tx1"/>
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/bballs"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/bruns"
        
        android:layout_below="@+id/tx1"/>
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/b4s"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/bballs"
        
        android:layout_below="@+id/tx1"/>
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/b6s"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/b4s"
        
        android:layout_below="@+id/tx1" />
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/bsr"
        android:layout_toRightOf="@+id/b6s"
        android:textAlignment="center"
        android:layout_below="@+id/tx1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/space1"
        android:layout_below="@+id/tx1"
        />


    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/b1name"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/bname"/>
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/b1runs"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/b1name"
        android:layout_below="@+id/bname"/>
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/b1balls"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/b1runs"
        android:layout_below="@+id/bname"/>
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/b14s"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/b1balls"
        android:layout_below="@+id/bname"/>
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/b16s"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/b14s"
        android:layout_below="@+id/bname" />
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/b1sr"
        android:layout_toRightOf="@+id/b16s"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/bname"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/space2"
        android:layout_below="@+id/b1sr"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx11"
        android:text="Bowler"
        android:textAlignment="center"
        android:layout_below="@+id/b1name"
        android:textStyle="bold" />

    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx12"
        android:layout_below="@+id/b1name"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/tx11"
        android:text="O"
        android:textStyle="bold" />

    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx13"
        android:textAlignment="center"
        android:layout_below="@+id/b1name"
        android:layout_toRightOf="@+id/tx12"
        android:text="R"
        android:textStyle="bold" />
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx14"
        android:textAlignment="center"
        android:layout_below="@+id/b1name"
        android:layout_toRightOf="@+id/tx13"
        android:text="M"
        android:textStyle="bold" />
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx15"
        android:textAlignment="center"
        android:layout_below="@+id/b1name"
        android:layout_toRightOf="@+id/tx14"
        android:text="W"
        android:textStyle="bold" />

    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx16"
        android:textAlignment="center"
        android:layout_below="@+id/b1name"
        android:layout_toRightOf="@+id/tx15"
        android:text="Eco"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/space3"
        android:layout_below="@+id/tx11"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/bowlname"
        android:textAlignment="center"
        android:layout_below="@+id/tx11"
        />
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/bowlovers"
        android:textAlignment="center"
        android:layout_below="@+id/tx11"
        android:layout_toRightOf="@+id/bowlname"
        />
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/bowlruns"
        android:textAlignment="center"
        android:layout_below="@+id/tx11"
        android:layout_toRightOf="@+id/bowlovers"
        />
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/bowlmaiden"
        android:layout_below="@+id/tx11"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/bowlruns"
        />
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/bowlwicks"
        android:textAlignment="center"
        android:layout_below="@+id/tx11"
        android:layout_toRightOf="@+id/bowlmaiden"
        />

    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/bowleco"
        android:textAlignment="center"
        android:layout_below="@+id/tx11"
        android:layout_toRightOf="@+id/bowlwicks"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/space4"
        android:layout_below="@+id/bowlname" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/bowlname"
        android:id="@+id/bowl_to_bat_label"
        android:textAlignment="center"
        android:typeface="serif" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/zero"
        android:id="@+id/button_0"
        android:layout_below="@id/bowl_to_bat_label"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:layout_marginLeft="10dp"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/one"
        android:id="@+id/button_1"
        android:layout_below="@id/bowl_to_bat_label"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:layout_toRightOf="@+id/button_0"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/two"
        android:id="@+id/button_2"
        android:layout_below="@id/bowl_to_bat_label"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:layout_toRightOf="@+id/button_1"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/three"
        android:id="@+id/button_3"
        android:layout_below="@id/bowl_to_bat_label"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/button_2"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/four"
        android:id="@+id/button_4"
        android:layout_below="@id/button_0"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:layout_marginLeft="10dp"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/five"
        android:id="@+id/button_5"
        android:layout_below="@id/button_0"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:layout_toRightOf="@+id/button_4"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/six"
        android:id="@+id/button_6"
        android:layout_below="@id/button_0"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:layout_toRightOf="@+id/button_5"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/wide"
        android:id="@+id/button_wide"
        android:layout_below="@id/button_0"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:layout_toRightOf="@+id/button_6"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/no_ball"
        android:id="@+id/button_noball"
        android:layout_below="@id/button_4"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:layout_marginLeft="10dp"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/leg_bye"
        android:id="@+id/button_legbye"
        android:layout_below="@id/button_4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:padding="0dp"
        android:layout_toRightOf="@+id/button_noball"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/bies"
        android:id="@+id/button_byes"
        android:layout_below="@id/button_4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:layout_toRightOf="@+id/button_legbye"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/out_wicket"
        android:id="@+id/button_wicket"
        android:layout_below="@id/button_4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:layout_toRightOf="@+id/button_byes"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/scorebar"
        android:layout_below="@+id/button_byes"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        />


</RelativeLayout>
